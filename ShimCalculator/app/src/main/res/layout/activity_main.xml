<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/shim_back_ground"
    tools:context="calc.shim.shimcalculator.MainActivity">

    <TextView
        android:id="@+id/Intake"
        android:text="@string/Intake"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:textColor="#99ff33"
        android:background="#000000"
        android:layout_below="@+id/ex_rThickness"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@id/in_specified_tolerance"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:ems="10"
        android:background="#dccac0"
        android:hint="@string/specified_tolerance"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Intake"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/in_rGap"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/in_specified_tolerance"
        android:layout_marginTop="20dp"
        android:background="#dccac0"
        android:gravity="center"
        android:hint="@string/current_gap"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/in_lGap"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:background="#dccac0"
        android:gravity="center"
        android:hint="@string/current_gap"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/in_rGap"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/in_rThickness"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/in_rGap"
        android:layout_marginTop="20dp"
        android:background="#dccac0"
        android:gravity="center"
        android:hint="@string/shim_thickness"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/in_lThickness"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:background="#dccac0"
        android:gravity="center"
        android:hint="@string/shim_thickness"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/in_rThickness"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Exhaust"
        android:text="@string/Exhaust"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#99ff33"
        android:background="#000000"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@id/ex_specified_tolerance"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:ems="10"
        android:background="#dccac0"
        android:hint="@string/specified_tolerance"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Exhaust"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ex_rGap"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ex_specified_tolerance"
        android:layout_marginTop="20dp"
        android:background="#dccac0"
        android:gravity="center"
        android:hint="@string/current_gap"
        android:inputType="numberDecimal" />


    <EditText
        android:id="@+id/ex_lGap"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:background="#dccac0"
        android:gravity="center"
        android:hint="@string/current_gap"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/ex_rGap"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ex_rThickness"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ex_rGap"
        android:layout_marginTop="20dp"
        android:background="#dccac0"
        android:gravity="center"
        android:hint="@string/shim_thickness"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/ex_lThickness"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:background="#dccac0"
        android:gravity="center"
        android:hint="@string/shim_thickness"
        android:inputType="numberDecimal"
        android:layout_above="@+id/Intake"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/calculate"
        android:id="@id/calculate_btn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textColor="#99ff33"
        android:backgroundTint="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/in_lThickness" />

</RelativeLayout>
